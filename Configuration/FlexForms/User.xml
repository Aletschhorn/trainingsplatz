<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Mode</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Birthday</numIndex>
										<numIndex index="1">User->birthday</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Membership activation</numIndex>
										<numIndex index="1">User->reactivation</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Member message</numIndex>
										<numIndex index="1">User->message;User->messageSend</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<settings.usergroups>
						<TCEforms>
							<label>Included usergroups</label>
							<displayCond>FIELD:switchableControllerActions:=:User->birthday</displayCond>
							<config>
								<type>select</type>
								<renderType>selectMultipleSideBySide</renderType>
								<foreign_table>fe_groups</foreign_table>
								<minitems>1</minitems>
								<maxitems>100</maxitems>
							</config>
						</TCEforms>
					</settings.usergroups>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>