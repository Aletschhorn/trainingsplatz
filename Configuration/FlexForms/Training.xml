<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Mode</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Traningsplatz</numIndex>
										<numIndex index="1">Training->list;Training->show;Training->new;Training->create;Training->edit;Training->update;Training->cancel;Training->activate;Training->delete;Training->addAnswer;Training->editAnswer;Training->modifyAnswer;Training->cancelAnswer;Training->reactivateAnswer;Training->message;Training->messageSend;Training->cancelRequestAnswer;Training->cancelPublicAnswer</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Short list</numIndex>
										<numIndex index="1">Training->short</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Training evaluations</numIndex>
										<numIndex index="1">Training->evaluate;Training->close;Training->billing;Training->discount;Training->finalize</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">Competition Ranking</numIndex>
										<numIndex index="1">Training->ranking;Training->userCompetition</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">User training list</numIndex>
										<numIndex index="1">Training->userTraining</numIndex>
									</numIndex>
									<numIndex index="5" type="array">
										<numIndex index="0">User competition list</numIndex>
										<numIndex index="1">Training->userCompetition</numIndex>
									</numIndex>
									<numIndex index="6" type="array">
										<numIndex index="0">Participation list</numIndex>
										<numIndex index="1">Training->participation;Training->userParticipation</numIndex>
									</numIndex>
									<numIndex index="7" type="array">
										<numIndex index="0">User participation list</numIndex>
										<numIndex index="1">Training->userParticipation</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<settings.limitation>
						<TCEforms>
							<label>Max. number of items to be shown</label>
							<displayCond>
								<or>
									<value1>FIELD:switchableControllerActions:=:Training->short</value1>
									<value2>FIELD:switchableControllerActions:=:Training->ranking;Training->userCompetition</value2>
								</or>
							</displayCond>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>int</eval>
							</config>
						</TCEforms>
					</settings.limitation>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>